    "paths": {
        "/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Logueo",
                "operationId": "App\\Http\\Controllers\\AuthController::login",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": ""
                    },
                    "401": {
                        "description": "Unauthorized; Email not verified"
                    }
                }
            }
        },
        "/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "description": "Registro",
                "operationId": "App\\Http\\Controllers\\AuthController::register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "description": "",
                                        "type": "string"
                                    },
                                    "password": {
                                        "description": "",
                                        "type": "string"
                                    },
                                    "password_confirm": {
                                        "description": "",
                                        "type": "string"
                                    },
                                    "phone": {
                                        "description": "",
                                        "type": "string"
                                    },
                                    "name": {
                                        "description": "",
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Registrado correctamente"
                    },
                    "500": {
                        "description": "El usuario no se ha podido registrar correctamente"
                    }
                }
            }
        }
    }
}